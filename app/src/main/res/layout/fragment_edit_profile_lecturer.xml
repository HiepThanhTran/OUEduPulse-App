<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Chuyên ngành giảng dạy"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputSpecialization"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_specialization"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/opensans_bold"
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Khoa học máy tính"
                android:textColor="@color/grey"
                android:textSize="16sp"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Bằng cấp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputDegree"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_degree"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/opensans_bold"
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Thạc sĩ"
                android:textColor="@color/grey"
                android:textSize="16sp"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Chứng chỉ"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputCertificate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_certificate"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/opensans_bold"
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Thạc sĩ Khoa học MSc"
                android:textColor="@color/grey"
                android:textSize="16sp"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>